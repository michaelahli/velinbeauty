<div class="bg-image">
    <div class="id-payment-wrapper">

        <div class="fill">
            <form action="/id-and-payment" method="post" onsubmit="check()">
                <div class="customer-id">
                    <div class="name">
                        <label for="name">Full Name</label>
                        <input type="text" name="name" id="name" placeholder="Enter Your Full Name" class="customerid"
                            required>
                    </div>
                    <div class="address">
                        <label for="province">Address</label>
                        <select name="province" id="province" class="province" required>
                            <option value="JawaTimur">Jawa Timur</option>
                            <option value="JawaTengah">Jawa Tengah</option>
                            <option value="JawaBarat">Jawa Barat</option>
                            <option value="DKIJakarta">DKI JAKARTA</option>
                        </select>
                        <input type="text" name="address" id="address" placeholder="Enter Your Full Adress"
                            class="customerid" required>
                    </div>
                    <div class="phone">
                        <label for="phone">Phone Number</label>
                        <input type="text" name="phone" id="phone" placeholder="Enter Your Phone Number"
                            class="customerid" required>
                    </div>
                    <div class="email">
                        <label for="email">E-mail</label>
                        <input type="text" name="email" id="email" placeholder="Enter Your Email" class="customerid"
                            required>
                    </div>
                </div>
                <div class="confirm-button ">
                    <button type="submit">Confirm Payment</button>
                </div>
                <input type="radio" value="total" id="total" name="total" checked="checked">
            </form>
            <div class="pricing ">
                <div class="left bold">
                    <div class="unique-code">
                        UNIQUE CODE
                    </div>
                    <div class="price">
                        PRICE
                    </div>
                </div>
                <div class="right">
                    <div class="unique-code" id="unique-code">
                        000
                    </div>
                    <div class="price" id="price">
                        Rp 0,-
                    </div>
                </div>
            </div>
        </div>

        <div class="pay box">
            <div class="title">
                Payment Transfer
            </div>
            <div class="account">
                <img src="/default/img/BCA.png" alt="BCA">
                <div class="left">
                    <div class="bank">
                        Bank
                    </div>
                    <div class="accnumber">
                        Account Number
                    </div>
                    <div class="Receiver">
                        Receiver
                    </div>
                </div>
                <div class="right">
                    <div class="bank bold">
                        BCA
                    </div>
                    <div class="accnumber bold">
                        1234567890
                    </div>
                    <div class="receiver bold">
                        Christine Velinsya
                    </div>
                </div>
            </div>
            <div class="title">
                Confirm To
            </div>
            <div class="confirmation-number">
                <img src="/default/img/logo_whatsapp.png" alt="Whatsapp">
                <div class="left">
                    Christine Velinsya
                </div>
                <div class="right bold">
                    6281388404255
                </div>
            </div>
        </div>

    </div>

</div>